= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .field
    = f.label :email, class: "label"
    .control
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"

  .field
    = f.label :password, class: "label"
    .control
      = f.password_field :password, autocomplete: "off", class: "input"
    - if @minimum_password_length
      %em.help (#{@minimum_password_length} caracteres m√≠nimo)

  .field
    = f.label :password_confirmation, class: "label"
    .control
      = f.password_field :password_confirmation, autocomplete: "off", class: "input"

  .has-text-right
    = f.submit "Register", class: "button is-success is-fullwidth"
  
= render "devise/shared/links"
